<table class="table">
  <thead>
    <tr>
      <th scope="col">Rank #</th>
      <th scope="col">Team</th>
      <th scope="col">Total Matches</th>
      <th scope="col">Wins</th>
      <th scope="col">Score</th>
    </tr>
  </thead>
  <tbody>
    <%- @teams.each_with_index do |team, index| %>
      <tr>
        <th scope="row"><%=index+1%></th>
        <td><%=team.name%></td>
        <td><%=team.total_matches%></td>
        <td><%=team.wins%></td>
        <td><%=team.score%></td>
      </tr>
    <% end %>
  </tbody>
</table>
