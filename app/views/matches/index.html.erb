<p id="notice"><%= notice %></p>

<h1>Matches</h1>

<table class="table">
  <thead>
    <tr>
      <th>Team1</th>
      <th>Team2</th>
      <th>Winning team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%- if @matches.exists? %>
      <%- @matches.each do |match| %>
        <tr>
          <td><%= Team.find_by(id: match.team1_id).name%></td>
          <td><%= Team.find_by(id: match.team2_id).name %></td>
          <td><%= Team.find_by(id: match.winning_team_id).name if !Team.find_by(id: match.winning_team_id).nil?  %></td>
          <td><%= link_to 'Show', match %></td>
          <td><%= link_to 'Edit', edit_match_path(match) %></td>
          <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Match', new_match_path %>
