<p id="notice"><%= notice %></p>

<p>
  <strong>Team1:</strong>
  <%= @match.team1_id %>
</p>

<p>
  <strong>Team2:</strong>
  <%= @match.team2_id %>
</p>

<p>
  <strong>Winning team:</strong>
  <%= @match.winning_team_id %>
</p>
<h3>Comments</h3>
<% @games.each do |game| %>
  <div>
    <h3>Winner</h3>
    <strong><%= game.winner_id %></strong>
    <br>
    <h3>Loser</h3>
    <strong><%= game.loser_id %></strong>
    <p>
    <h3>Score</h3>
    <strong><%= game.score %></strong>
    <br>
    <p><%= link_to 'Delete', game_path(game), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
<% end %>
<%- if @match.winning_team_id.nil? %>
  <%= render partial: 'games/form', locals: { game: @game } %>
<%end%>

<%= link_to 'Edit', edit_match_path(@match) %> |
<%= link_to 'Back', matches_path %>
