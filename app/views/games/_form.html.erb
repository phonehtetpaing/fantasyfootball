    <%=select_tag "teams", options_for_select(["#{@match.team1_id}", "#{@match.team2_id}"], "id") %>
  </div>

  <div class="field">
    <%= form.hidden_field :match_id %>
  </div>

  <div class="field">
    <%= form.label :score %>
    <%= form.number_field :score %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
